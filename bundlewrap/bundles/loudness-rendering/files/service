[Unit]
Description=Loudness monitoring for ${identifier}
After=network.target

[Service]
Type=simple
User=voc
Group=voc
ExecStart=/usr/local/bin/loudness_rendering "${identifier}" "${source_url}" "${output}" "${room_name}"
Restart=always
RestartSec=10
StartLimitInterval=0

[Install]
WantedBy=multi-user.target
