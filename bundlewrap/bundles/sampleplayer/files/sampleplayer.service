[Unit]
Description=Simple player for audio samples
After=network.target

[Service]
Type=exec
Restart=always
RestartSec=5s
ExecStart=/opt/sampleplayer/venv/bin/gunicorn --config gunicorn_config.py app:app

# You may have to adjust these settings
User=sampleplayer
Group=sampleplayer
WorkingDirectory=/opt/sampleplayer/src

[Install]
WantedBy=multi-user.target
