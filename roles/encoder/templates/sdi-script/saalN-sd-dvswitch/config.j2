PIPES="${PIPE_CAPTURE} ${PIPE_INTERMEDIATE}"

CMD_CAPTURE="dvsink-command-voc -h 10.73.{{ room_number }}.1 -p 2000 -- sh -c 'cat - > ${PIPEPATH}/${PIPE_CAPTURE}'"

CMD_INTERMEDIATE="ffmpeg -y -f dv -re -i ${PIPEPATH}/${PIPE_CAPTURE} -aspect 16:9 -threads:0 0 \
