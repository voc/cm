#!/bin/sh
ffmpeg -y -nostdin -xerror \
	-timeout 3000000 -i http://10.73.{{ room_number }}.2:1881/{{ grabbersource_url_path | default('vgabroadcaster.mjpg') }} \
	-filter_complex "
		[0:v] fps=25,scale=1920x1080,setsar=1/1 [v] ;
		anullsrc=r=48000:cl=stereo [a]
	" \
	-map "[v]" -map "[a]" \
	-c:a pcm_s16le \
	-c:v rawvideo \
	-pix_fmt yuv420p \
	-f matroska \
	-metadata title="grabber" \
	tcp://localhost:{{ number_cameras | int + 10000 }}
